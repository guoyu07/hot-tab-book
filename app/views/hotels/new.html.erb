<h1>Add New Hotel</h1>
<div class="span5">
  <%= form_for @hotel, :multipart => true, :html => {:class => 'form-horizontal'} do |f| %>
    <div class="control-group">
      <%= f.label :name, "Name", :class => 'control-label'  %>
      <div class="controls">
        <%= f.text_field :name %>
      </div>
    </div>
    <div class="control-group">
      <%= f.label :address, "Address", :class => 'control-label'  %>
      <div class="controls">
        <%= f.text_field :address %>
      </div>
    </div>
    <div class="control-group">
      <%= f.label :city, "City", :class => 'control-label'  %>
      <div class="controls">
        <%= f.text_field :city %>
      </div>
    </div>
    <div class="control-group">
      <%= f.label :website, "Website-Url", :class => 'control-label' %>
      <div class="controls">
        <%= f.url_field :website, :placeholder => 'http://www.website.com'  %>
      </div>
    </div>
    <div class="control-group">
      <%= f.label :phone_number, "Phone", :class => 'control-label'  %>
      <div class="controls">
        <%= f.text_field :phone_number %>
      </div>
    </div>
    <div class="control-group">
      <%= f.label :main_image, "Hotel Image", :class => 'control-label'  %>
      <div class="controls">
        <%= f.file_field :main_image %>
      </div>
    </div>
    <div class="control-group">
      <div class="controls" id="webo-new-post-submit-btn">
        <%= f.submit "Save"%>
      </div>
    </div>
  <% end %>
</div>
